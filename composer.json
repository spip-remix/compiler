{
    "name": "spip-remix/compiler",
    "description": "Compilateur de squelette SPIP",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "JamesRezo",
            "email": "james@rezo.net"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Spip\\Component\\Compilo\\": "src/"
        },
        "files": [
            "files/balises.php",
            "bootstrap/inc/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Acme\\Filter\\": "tests/Fixtures/",
            "Spip\\Component\\Compilo\\Test\\": "tests/"
        },
        "files": [
            "tests/Fixtures/filtre_min_sec.php",
            "tests/Fixtures/minsec.php",
            "tests/Fixtures/inc/filtres/example.php"
        ]
    },
    "config": {
        "platform": {
            "php": "8.2.17"
        }
    }
}
