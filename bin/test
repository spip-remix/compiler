#!/usr/bin/env php
<?php

use Spip\Component\Compilo\Compilo;
use Spip\Component\Compilo\NullBalise;

require_once __DIR__ . '/../vendor/autoload.php';

$b = new NullBalise;

echo 'NullBalise:"' . $b . '"'.PHP_EOL;

echo 'Test NullBalise:';
echo $b == '' ? 'OK' : 'KO';
echo PHP_EOL;

echo 'call balise_NULL_dist:"' . balise_NULL_dist() . '"' . PHP_EOL;

$c = new Compilo;
$squelette = '#NULL'; // file_get_contents('squelettes/sommaire.html')
$page = $c->render($squelette);

echo 'Metadonnees: ' . var_export($c->getMetaDonnees(), true) . PHP_EOL;
echo 'Contenu HTML:"' . $page . '"' . PHP_EOL;

exit(0);
